packages:
  hwloc:
    require: '%gcc ^openmpi'
  intel-oneapi-mpi:
    require: '%oneapi'
  cuda:
    externals:
      - spec: cuda@12.9.0
        prefix: /nopt/gila/apps/gila/cuda/12.9.0
    buildable: false
  all:
    target: [x86_64]
    buildable: true
    providers:
      blas: [openblas]
      lapack: [openblas]
      mpi: [openmpi]
